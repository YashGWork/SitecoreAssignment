@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc.Helpers
@using Sitecore.Data.Fields
@using Sitecore.Data.Items


@{
    ViewBag.Title = "HeaderTop";

    // Cast the page to a Sitecore item
    Item myItem = (Item)Model;

    // Reading the Multilist
    MultilistField languageListItem = myItem.Fields["languages"];

    // Getting all the items
    Item[] languages = languageListItem.GetItems();

}


<div class="header-top__area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-md-4 col-4">
                <div class="topbar__link">
                    <a href="https://eurtech-react.vercel.app/faq">@Html.Sitecore().Field("firstSection")</a><a href="https://eurtech-react.vercel.app/case-study">@Html.Sitecore().Field("secondSection")</a>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-8">
                <div class="topbar__right d-flex align-items-center justify-content-end">
                    <div class="tobar__social d-none d-md-block">
                        <div class="topbar__social">
                            <ul>
                                <li>
                                    <a href="www.facebook.com"><i class="fa-brands fa-facebook-f"></i></a>
                                </li>
                                <li>
                                    <a href="www.x.com"><i class="fa-brands fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="wwww.behance.net"><i class="fa-brands fa-behance"></i></a>
                                </li>
                                <li>
                                    <a href="www.youtube.com"><i class="fa-brands fa-youtube"></i></a>
                                </li>
                                <li>
                                    <a href="www.linkedin.com"><i class="fa-brands fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="header__lang p-relative pl-40">
                        <span class="header__lang-selected">@Html.Sitecore().Field("defaultLanguage")</span>
                        <ul class="header__lang-list">

                            @foreach (var language in languages)
                            {
                                <li>@Html.Sitecore().Field("text", language)</li>
                            }


                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>